# List of packages to get on every new machine
sudo apt install cmake ack-grep tree git manpages-dev manpages-posix-dev tmux cscope cmake sshpass bison flex exuberant-ctags minicom vim net-tools gcc g++

# List of customizations
sudo dpkg-divert --local --divert /usr/bin/ack --rename --add /usr/bin/ack-grep 
